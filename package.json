{
  "name": "vue-ueditor-wrap",
  "version": "3.0.0-beta.0",
  "description": "Vue + UEditor + v-model双向绑定",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "dev": "vant-cli dev",
    "test": "vant-cli test",
    "lint": "vant-cli lint",
    "build": "vant-cli build",
    "release": "vant-cli release",
    "test:coverage": "open test/coverage/index.html",
    "build-site": "vant-cli build-site && gh-pages -d site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HaoChuan9421/vue-ueditor-wrap.git"
  },
  "keywords": [
    "ueditor",
    "vue",
    "v-model",
    "富文本编辑器",
    "百度编辑器"
  ],
  "author": "郑昊川",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HaoChuan9421/vue-ueditor-wrap/issues"
  },
  "homepage": "https://github.com/HaoChuan9421/vue-ueditor-wrap#readme",
  "devDependencies": {
    "@vant/cli": "^3.7.0-beta.0",
    "@vue/compiler-sfc": "^3.0.0",
    "babel-plugin-import": "^1.13.0",
    "copy-webpack-plugin": "6",
    "vue": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "vant-cli commit-lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": "eslint --fix",
    "*.{vue,css,less,scss}": "stylelint --fix"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vant"
    ]
  },
  "stylelint": {
    "extends": [
      "@vant/stylelint-config"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
